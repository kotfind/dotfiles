#~/.config/xkb/my
xkb_keymap {
    xkb_keycodes  { include "evdev+aliases(qwerty)" }; 
    xkb_types     { include "complete"  };
    xkb_compat    { include "complete+ledscroll(group_lock)"    };
    xkb_geometry  { include "pc(pc105)" };

    xkb_symbols   {
        include "pc+us+ru:2+inet(evdev)+group(alt_shift_toggle)+group(sclk_toggle)+keypad(pointerkeys)"
        key <CAPS> { [ Escape ] };
        key <ESC>  { [ Caps_Lock ] };
    };
};
